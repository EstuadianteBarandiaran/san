<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9F4"
    android:fitsSystemWindows="true"
    tools:context=".Home">

    <!-- Mensaje Bienvenido -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textColor="#2d3f46"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="30dp"/>

    <!-- App Bar Superior -->
    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_below="@id/welcomeMessage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ideas de comidas: Plan Semanal"
            android:textColor="#2d3f46"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:tint="#88996A"/>
    </LinearLayout>

    <!-- Selector de día -->
    <HorizontalScrollView
        android:id="@+id/daySelectorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/daySelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Los días se agregarán programáticamente -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recetasRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:layout_below="@id/daySelectorContainer"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <!-- Barra de Navegación Inferior MEJORADA -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_nav_bar"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:elevation="16dp">

        <!-- Botón Inicio -->
        <LinearLayout
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Escáner -->
        <LinearLayout
            android:id="@+id/planButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_camera"
                android:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escaner"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón ChatBot -->
        <LinearLayout
            android:id="@+id/recipesButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat"
                android:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ChatBot"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:tint="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>