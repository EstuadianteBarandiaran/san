<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFAF6"
    tools:context=".Register">

    <!-- Wave superior -->
    <ImageView
        android:id="@+id/waveTop"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/wave_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wave inferior -->
    <ImageView
        android:id="@+id/waveBottom"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/wave_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro Personal"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/quicksand"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/waveTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />


    <!-- Contenedor en CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Campo: Nombre -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:padding="12dp"
                android:backgroundTint="#88996A" />

            <!-- Campo: Edad -->
            <EditText
                android:id="@+id/etEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:inputType="number"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#88996A" />

            <!-- Campo: Estatura -->
            <EditText
                android:id="@+id/etEstatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estatura (cm)"
                android:inputType="numberDecimal"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#88996A" />

            <!-- Campo: Peso -->
            <EditText
                android:id="@+id/etPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Peso (kg)"
                android:inputType="numberDecimal"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#88996A" />

            <!-- Campo: Comidas -->
            <EditText
                android:id="@+id/etComidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comidas al día"
                android:inputType="number"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#88996A" />

            <!-- Campo: Agua -->
            <EditText
                android:id="@+id/etAgua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Litros de agua al día"
                android:inputType="numberDecimal"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#88996A" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón de Registro con estilo embebido -->
    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#88996A"
        android:elevation="6dp"
        android:fontFamily="@font/quicksand"
        android:padding="16dp"
        android:stateListAnimator="@null"
        android:text="Registrar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:translationZ="6dp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
