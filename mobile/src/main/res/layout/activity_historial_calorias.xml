<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9F4"
    android:padding="16dp"
    tools:context=".HistorialCalorias">

    <!-- Flecha de regreso (sola en la esquina superior izquierda) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:tint="#2d3f46"
        android:contentDescription="Regresar al perfil"
        android:scaleType="centerInside" />

    <!-- Título centrado debajo de la flecha -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:text="Historial de Calorías"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/quicksand"
        android:textColor="#2d3f46"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

    <!-- RecyclerView con fondo redondeado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitulo"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistorial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </LinearLayout>

</RelativeLayout>